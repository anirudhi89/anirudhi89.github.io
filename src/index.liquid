<section id="about" class="about">
  <h2>About</h2>
  <p>Hi, I'm Anirudh. I'm a full stack developer. This is my minimal corner of the web â€” a place for a short intro, some projects, and occasional writing.</p>
</section>

<section id="blog" class="blog">
  <h2>Blog</h2>
  <ul class="blog-list">
    {% for post in collections.blog %}
    <li>
      <h3 class="post-title"><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
      <p class="post-meta">{{ post.date | formatDate }}</p>
      {% if post.data.excerpt %}
      <p class="post-preview">{{ post.data.excerpt }}</p>
      {% endif %}
    </li>
    {% else %}
    <li><p class="post-preview">No posts yet.</p></li>
    {% endfor %}
  </ul>
</section>

<section id="projects" class="projects">
  <h2>Projects</h2>
  <div class="projects-carousel-wrap">
    <div class="projects-carousel">
      {% for project in projects %}
      <article class="project-card">
        <h3>{{ project.title }}</h3>
        <p>{{ project.description }}</p>
        <div class="project-links">
          {% if project.github %}<a href="{{ project.github }}" rel="noopener noreferrer">GitHub</a>{% endif %}
          {% if project.demo %}<a href="{{ project.demo }}" rel="noopener noreferrer">Demo</a>{% endif %}
          {% if project.blog %}<a href="{{ project.blog }}">Post</a>{% endif %}
        </div>
      </article>
      {% endfor %}
    </div>
  </div>
</section>
